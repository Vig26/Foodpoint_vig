<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fargment.MyProfileFragment"
    android:background="#ff9800">



    <ImageView
        android:id="@+id/imgprofilefag"
        android:layout_width="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="120dp"
        android:src="@drawable/profilepic"/>

    <androidx.cardview.widget.CardView
    android:layout_below="@id/imgprofilefag"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    app:cardBackgroundColor="#ff5976"
    android:id="@+id/cardname"
    app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/name"
        android:textSize="20sp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#ffffff"
        android:id="@+id/txtnameprof"
        android:gravity="center_horizontal" />
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
    android:layout_below="@id/cardname"
    android:id="@+id/cardmob"
    android:layout_width="match_parent"
        android:layout_margin="10dp"
    android:layout_height="45dp"
    app:cardBackgroundColor="#ff5976"
    app:cardCornerRadius="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:text="@string/mobile_number_profile"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#ffffff"
        android:id="@+id/txtmobnumprof"
        android:gravity="center_horizontal" />
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_below="@id/cardmob"
        android:id="@+id/cardemail"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="45dp"
        app:cardBackgroundColor="#ff5976"
        app:cardCornerRadius="10dp"
        android:elevation="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/email_profile"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:background="#ffffff"
            android:padding="5dp"
            android:id="@+id/txtemailprof"
            android:gravity="center_horizontal" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_below="@id/cardemail"
        android:id="@+id/cardaddress"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="45dp"
        app:cardBackgroundColor="#ff5976"
        app:cardCornerRadius="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/delivery_address"
            android:textSize="20sp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:background="#ffffff"
            android:id="@+id/txtaddressprof"
            android:gravity="center_horizontal" />
    </androidx.cardview.widget.CardView>



</RelativeLayout>